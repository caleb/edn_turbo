#!/usr/bin/env ruby
# -*- coding: utf-8 -*-

require 'edn'
require 'pp'

if ARGV.size == 0
  $stderr.puts "no filename given"
  exit 1
end

# file checks
filename = ARGV[0]
if !File.exist? filename
  $stderr.puts "Error opening #{filename}"
  abort
end

# read the file
doc_data = {}
begin
  File.open(filename) do |file|
    doc_data = EDN.read(file)
  end
rescue Exception
  $stderr.puts "Error reading file"
  abort
end

pp doc_data
